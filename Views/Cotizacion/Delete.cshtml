@model SIGEVALP.Models.Cotizacion

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>
<h4>Cotizacion</h4>
@Html.ActionLink("Regresar", "Index")
<hr />
<h4>¿Estás seguro de que deseas eliminar el registro?</h4>
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.codigo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.codigo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fecha)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Proveedor.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Proveedor.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuario.username)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Usuario.username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.estado)
        </dd>
    </dl>
    @if (Model.DetalleCotizacion.Count() == 0)
    {
        <p>Aún no hay productos asociados a esta cotización.</p>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unit.</th>
                    <th>Descuento</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DetalleCotizacion)
                {
                    <tr>
                        <td>
                            @item.Producto.codigo
                        </td>
                        <td>
                            @item.Producto.nombre
                        </td>
                        <td>
                            @item.cantidad
                        </td>
                        <td>
                            @item.costo
                        </td>
                        <td>
                            @item.descuento
                        </td>
                        <td>
                            @item.total
                        </td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@Html.DisplayNameFor(n => n.parcial)</td>
                    <td>@Model.parcial</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@Html.DisplayNameFor(n => n.descuento)</td>
                    <td>@Model.descuento</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@Html.DisplayNameFor(n => n.neto)</td>
                    <td>@Model.neto</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@Html.DisplayNameFor(n => n.iva)</td>
                    <td>@Model.iva</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@Html.DisplayNameFor(n => n.total)</td>
                    <td>@Model.total</td>
                </tr>
            </tbody>
        </table>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" />
        </div>
    }
</div>
