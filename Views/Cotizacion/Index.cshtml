@model IEnumerable<SIGEVALP.Models.Cotizacion>

@{
    ViewBag.Title = "Index";
}

<h2>Cotizaciones</h2>

<p>
    @Html.ActionLink("Registrar", "Create", null, new { @class = "btn btn-default"})
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Proveedor.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.username)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.neto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iva)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @{var stateClass = item.estado == "Pendiente" ? "label-warning" : "label-success";}
        <td>
            @Html.DisplayFor(modelItem => item.codigo)
        </td>   
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proveedor.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.username)
        </td>             
        <td>        
            <span class="label @stateClass">@item.estado</span>
            @*Html.DisplayFor(modelItem => item.estado)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.neto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.iva)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total)
        </td>        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }, new { @class="btn-light"}) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })
        </td>
    </tr>
}
</table>
