@model SIGEVALP.Models.Categoria
@{
    ViewBag.Title = "Create";
}

<h2>Registrar</h2>
<h4>Categoria</h4>
<div>
    @Html.ActionLink("Regresar", "Index")
</div>
<hr />

@using (Html.BeginForm("Create", "Categoria"))
{
    @Html.AntiForgeryToken();

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.nombre, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(m => m.nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.descripcion, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(m => m.descripcion, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.descripcion, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </div>
    </div>    
}