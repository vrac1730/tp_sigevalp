@model IEnumerable<SIGEVALP.Models.Local>


@{
    ViewBag.Title = "Index-Local";
 }

<h2>Lista de Locales</h2>   

<p>
    @Html.ActionLink("Registrar", "Create", null, new { @class="btn btn-default" })
</p>

<table class="table table-hover">
    <tr>        
        <th>@Html.DisplayNameFor(model => model.ruc)</th>
        <th>@Html.DisplayNameFor(model => model.nombre)</th>
        <th>@Html.DisplayNameFor(model => model.direccion)</th>
        <th>@Html.DisplayNameFor(model => model.telefono)</th>
        <th>@Html.DisplayNameFor(model => model.razon_social)</th>
        <th>Opción</th>
    </tr>

@foreach (var elemento in Model)
 {
<tr>    
    <td>@Html.DisplayFor(modelItem => elemento.ruc)</td>
    <td>@Html.DisplayFor(modelItem => elemento.nombre)</td>
    <td>@Html.DisplayFor(modelItem => elemento.direccion)</td>
    <td>@Html.DisplayFor(modelItem => elemento.telefono)</td>    
    <td>@Html.DisplayFor(modelItem => elemento.razon_social)</td>        
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = elemento.id })
    </td>
</tr>            
 }
</table>
