@model SIGEVALP.Models.Solicitud
@{
    ViewBag.Title = "Details";
}

<h2>Detalle de Solicitud</h2>
<div>
    @Html.ActionLink("Regresar", "Index")
</div>
<hr />

<div>    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.codigo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.codigo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuario.Persona.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Usuario.Persona.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuario.Local.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Usuario.Local.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fecha)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.estado)
        </dd>
    </dl>

@if (Model.DetalleSolicitud.Count() == 0)
{
    <p>Aún no hay productos asociados a esta solicitud.</p>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DetalleSolicitud[0].Producto.codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetalleSolicitud[0].Producto.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetalleSolicitud[0].Producto.marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetalleSolicitud[0].cantSolicitada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetalleSolicitud[0].cantEntregada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetalleSolicitud[0].Producto.Alerta.nombre)
            </th>
            <th>Opciones</th>
        </tr>
    @foreach (var item in Model.DetalleSolicitud)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantSolicitada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantEntregada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Alerta.nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditDetail", new { id = item.id })
            </td>
        </tr>
    }
    </table>
}
</div>

