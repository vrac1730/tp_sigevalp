<nav class="navbar navbar-background navbar-expand-md fixed-top"> @* navbar-expand-md: create media query to show offcanvas body (nav items) and hide offcanvas header (sidebar) until window.innerWidth´s less than 768px *@
    <div class="container-fluid">
        <div>
            <button class="navbar-toggler px-2" data-bs-toggle="offcanvas" data-bs-target=".offcanvas-start" type="button" aria-expanded="false" aria-controls=".offcanvas-start">
                <span class="navbar-toggler-icon"></span>
            </button>
            @Html.ActionLink("SIGEVALP", "Index", "Home", null, new { @class = "navbar-brand text-white yellow-txt-on ms-2" })
        </div>
        <div class="offcanvas offcanvas-start offcanvas-background" tabindex="-1" aria-labelledby="offcanvasLabel">
            <div class="offcanvas-header border-bottom">
                <h5 class="offcanvas-title" id="offcanvasLabel">Trattoria la Piccolina</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                @Html.Partial("_OffCanvasBody")
                @Html.Partial("_NavItems")
            </div>
        </div>
        @Html.Partial("_LoginPartial")
    </div>
</nav>

<style>
    .navbar-background {
        background-color: var(--base2) !important;
    }
    .offcanvas-background {
        /*background-color: var(--base2-light) !important;*/
    }
    /* Hides offcanvasBody and navItems when width is: greater than 768px and less than 768px respectively. */
    #OffCanvasBody {
        display: none;
    }
    @@media (max-width: 767px) {
        #OffCanvasBody {
            display: block;
        }
        #NavItems {
            display: none;
        }
    }
    /* Hides the box-shadow from navbar-toggler class */
    .navbar-toggler {
        border-color: #FFF !important;
        color: transparent;
    }
    /* Changes the toggler icon color: The encoding notation replaces the desired character with % and two hexadecimal digits position in the ASCII character set. */
