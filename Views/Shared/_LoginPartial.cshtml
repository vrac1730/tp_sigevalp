@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()

        <dl class="d-flex flex-row" style="position: fixed; top: 0.5rem; right: 1%;">
            <dd>
                @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "unstyled-link text-white yellow-txt-on p-2" })
            </dd>
            <dd>
                <a class="unstyled-link text-white yellow-txt-on p-2" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a>
            </dd>
        </dl>
    }
}
else
{
    <dl class="d-flex flex-row" style="position: fixed; top: 0.5rem; right: 2%;">
        <dd>
            @Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "unstyled-link text-white yellow-txt-on p-2" })
        </dd>
        <dd>
            @Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "unstyled-link text-white yellow-txt-on p-2" })
        </dd>
    </dl>
}
<style>
    .yellow-txt-on:hover {
        color: var(--content1) !important;
    }
    .unstyled-link {
        display: block;
        text-decoration: none;
    }
</style>